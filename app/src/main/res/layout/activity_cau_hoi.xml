<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playing_background"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".CauHoiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnDungCuocChoi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/btn_dialog" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn5050"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/support_1" />

            <ImageButton
                android:id="@+id/btnGoiDien"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/support_2" />

            <ImageButton
                android:id="@+id/btnKhanGia"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/support_3" />

            <ImageButton
                android:id="@+id/btnTuVan"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@null"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/support_4" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtCauHoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:text="Câu hỏi số 1:"
            android:textColor="@android:color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/question"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNoiDungCauHoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Truyện ngắn nào của Phạm Duy Tốn đã lên án gay gắt tên quan phủ "lòng lang dạ thú" và bày tỏ niềm cảm thương trước cảnh "nghìn sầu muôn thảm" của nhân dân do thiên tai và do thái độ vô trách nhiệm của kẻ cầm quyền?'
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnDapAnA"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/option"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="11dp"
            android:text="Button"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDapAnB"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/option"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="11dp"
            android:text="Button"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDapAnC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/option"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="11dp"
            android:text="Button"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnDapAnD"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/option"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="11dp"
            android:text="Button"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>