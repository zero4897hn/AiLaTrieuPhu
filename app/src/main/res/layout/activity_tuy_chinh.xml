<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TuyChinhActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Tùy chỉnh"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switchAmThanhNen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:checked="true"
        android:text="Âm thanh nền" />

    <Switch
        android:id="@+id/switchAmThanhHieuUng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:checked="true"
        android:text="Âm thanh hiệu ứng" />

</LinearLayout>